@code {
    private List<Room> rooms;  // Holds room data from the API
    private int PriceSingleStandard = 0;
    private int PriceDoubleStandard = 0;
    private int PriceSinglePremium = 0;
    private int PriceDoublePremium = 0;
    private int PricePenthouse = 0;
    private string Curency = "DKK";

    protected override async Task OnInitializedAsync()
    {
        await GetAllRoomTypes();
    }

    async Task GetAllRoomTypes()
    {
        try
        {
            // Fetch room data from API
            rooms = await Http.GetFromJsonAsync<List<Room>>("api/Rooms");

            // Map room prices based on the room type
            foreach (var room in rooms)
            {
                switch (GetRoomTypeString(room.Type))
                {
                    case "standard single":
                        PriceSingleStandard = room.Price;
                        break;
                    case "standard double":
                        PriceDoubleStandard = room.Price;
                        break;
                    case "premium single":
                        PriceSinglePremium = room.Price;
                        break;
                    case "premium double":
                        PriceDoublePremium = room.Price;
                        break;
                    case "penthouse":
                        PricePenthouse = room.Price;
                        break;
                }
            }
        }
        catch (Exception ex)
        {
            Debug.WriteLine($"Error fetching room data: {ex.Message}");
        }
    }

    // Helper function to map room type from int to string
    private string GetRoomTypeString(int type)
    {
        return type switch
        {
            0 => "standard single",
            1 => "standard double",
            2 => "premium single",
            3 => "premium double",
            4 => "penthouse",
            _ => "unknown"
        };
    }
}

